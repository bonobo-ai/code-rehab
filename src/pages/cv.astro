const skills = {
	frontend: ["React", "Next.js", "React Native", "TypeScript", "JavaScript", "HTML/CSS", "Tailwind CSS"],
	backend: ["Node.js", "Express", "Django", "Python", "REST APIs", "GraphQL"],
	database: ["PostgreSQL", "MongoDB", "Supabase", "Firebase"],
	tools: ["Git", "Docker", "Netlify", "Vercel", "CI/CD", "Jest", "Cypress"]
};

const languages = [
	{ name: "Italian", level: "Native" },
	{ name: "English", level: "Fluent" },
	{ name: "Swedish", level: "Fluent" },
	{ name: "Spanish", level: "Fluent" }
];

const education = [
	{ school: "Aarhus University", degree: "MSc, New Product Development", period: "2010 - 2012", country: "Denmark" },
	{ school: "Stockholm University", degree: "Exchange, Consumer Behavior", period: "2011 - 2012", country: "Sweden" },
	{ school: "Università di Palermo", degree: "BSc, Economics & Business", period: "2006 - 2010", country: "Italy" },
	{ school: "Universidad de Málaga", degree: "Exchange, Economics", period: "2008 - 2009", country: "Spain" }
];
---

<Layout title="CV | Valentino Giudice" description="Senior Full-Stack Developer with 6+ years of experience in React, Next.js, Node.js, and TypeScript, plus 3+ years in product management.">
	<main>
		<section class="cv-hero">
			<div class="container">
				<a href="/" class="back-link">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M19 12H5M12 19l-7-7 7-7"/>
					</svg>
					Back to Home
				</a>
				<div class="cv-header">
					<div class="cv-photo">
						<img src="/valentino.jpg" alt="Valentino Giudice" width="150" height="150" />
					</div>
					<div class="cv-intro">
						<h1>Valentino Giudice</h1>
						<p class="cv-title">Senior Full-Stack Developer</p>
						<p class="cv-summary">
							6+ years of experience building web and mobile applications,
							plus 3+ years in product management, Scrum Master, and Product Owner roles.
							Specialized in React, React Native, Next.js, Node.js, and TypeScript.
							Worked with startups and enterprises across the US, EU, and UAE.
						</p>
						<div class="cv-actions">
							<button id="downloadBtn" class="btn btn-primary">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
									<polyline points="7 10 12 15 17 10"/>
									<line x1="12" y1="15" x2="12" y2="3"/>
								</svg>
								Download PDF
							</button>
							<a href={linkedInUrl} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
								<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
									<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
								</svg>
								LinkedIn Profile
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="cv-content" id="cv-content">
			<div class="container">
				<div class="cv-grid">
					<div class="cv-main">
						<div class="cv-section">
							<h2>Experience</h2>
							{experience.map((exp) => (
								<div class="experience-card">
									<div class="exp-header">
										<div>
											<h3>{exp.role}</h3>
											<p class="exp-company">{exp.company} <span class="exp-location">{exp.location}</span></p>
										</div>
										<span class="exp-period">{exp.period}</span>
									</div>
									{exp.description && <p class="exp-description">{exp.description}</p>}
									<ul class="exp-highlights">
										{exp.highlights.map((highlight) => (
											<li>{highlight}</li>
										))}
									</ul>
									<div class="exp-tech">
										{exp.tech.map((t) => (
											<span class="tech-tag">{t}</span>
										))}
									</div>
								</div>
							))}
						</div>
					</div>

					<aside class="cv-sidebar">
						<div class="cv-section">
							<h2>Skills</h2>
							<div class="skills-group">
								<h4>Frontend</h4>
								<div class="skills-tags">
									{skills.frontend.map((skill) => (
										<span class="skill-tag">{skill}</span>
									))}
								</div>
							</div>
							<div class="skills-group">
								<h4>Backend</h4>
								<div class="skills-tags">
									{skills.backend.map((skill) => (
										<span class="skill-tag">{skill}</span>
									))}
								</div>
							</div>
							<div class="skills-group">
								<h4>Database</h4>
								<div class="skills-tags">
									{skills.database.map((skill) => (
										<span class="skill-tag">{skill}</span>
									))}
								</div>
							</div>
							<div class="skills-group">
								<h4>Tools</h4>
								<div class="skills-tags">
									{skills.tools.map((skill) => (
										<span class="skill-tag">{skill}</span>
									))}
								</div>
							</div>
						</div>

						<div class="cv-section">
							<h2>Languages</h2>
							<ul class="languages-list">
								{languages.map((lang) => (
									<li>
										<span class="lang-name">{lang.name}</span>
										<span class="lang-level">{lang.level}</span>
									</li>
								))}
							</ul>
						</div>

						<div class="cv-section">
							<h2>Education</h2>
							<ul class="education-list">
								{education.map((edu) => (
									<li>
										<span class="edu-school">{edu.school}</span>
										<span class="edu-degree">{edu.degree}</span>
										<span class="edu-meta">{edu.period} · {edu.country}</span>
									</li>
								))}
							</ul>
						</div>

						<div class="cv-section">
							<h2>Contact</h2>
							<div class="contact-info">
								<p>
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
										<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
										<polyline points="22,6 12,13 2,6"/>
									</svg>
									giudicevalentino@gmail.com
								</p>
							</div>
						</div>
					</aside>
				</div>
			</div>
		</section>

		<footer class="footer">
			<div class="container">
				<p>&copy; 2025 Valentino Giudice. All rights reserved.</p>
			</div>
		</footer>
	</main>
</Layout>

<script>
	document.getElementById('downloadBtn')?.addEventListener('click', () => {
		window.print();
	});
</script>

<style>
	.container {
		max-width: 1140px;
		margin: 0 auto;
		padding: 0 var(--space-lg);
	}

	/* Hero */
	.cv-hero {
		padding: var(--space-3xl) 0 var(--space-xl);
		position: relative;
	}

	.cv-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: var(--gradient-glow);
		pointer-events: none;
	}

	.cv-hero .container {
		position: relative;
		z-index: 1;
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: var(--space-sm);
		color: var(--color-text-muted);
		font-size: 0.9rem;
		margin-bottom: var(--space-xl);
		transition: color var(--transition-base);
	}

	.back-link:hover {
		color: var(--color-accent);
	}

	.cv-header {
		display: flex;
		gap: var(--space-2xl);
		align-items: flex-start;
	}

	.cv-photo {
		flex-shrink: 0;
		position: relative;
		padding: 4px;
		background: var(--gradient-teal);
		border-radius: var(--radius-lg);
	}

	.cv-photo img {
		width: 150px;
		height: 150px;
		border-radius: calc(var(--radius-lg) - 4px);
		object-fit: cover;
		display: block;
	}

	.cv-intro h1 {
		font-size: 2.5rem;
		margin: 0 0 var(--space-xs);
		letter-spacing: -0.02em;
	}

	.cv-title {
		font-size: 1.25rem;
		color: var(--color-accent);
		margin: 0 0 var(--space-md);
		font-weight: 500;
	}

	.cv-summary {
		color: var(--color-text-muted);
		line-height: 1.7;
		max-width: 500px;
		margin: 0 0 var(--space-xl);
	}

	.cv-actions {
		display: flex;
		gap: var(--space-md);
		flex-wrap: wrap;
	}

	/* Buttons */
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: var(--space-sm);
		padding: var(--space-md) var(--space-xl);
		border-radius: var(--radius-lg);
		font-weight: 600;
		font-size: 1rem;
		transition: all var(--transition-base);
		cursor: pointer;
		border: none;
		text-decoration: none;
	}

	.btn-primary {
		background: var(--gradient-teal);
		color: var(--color-teal-950);
		box-shadow: var(--shadow-md), 0 0 20px rgba(45, 212, 191, 0.2);
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg), 0 0 30px rgba(45, 212, 191, 0.3);
		color: var(--color-teal-950);
	}

	.btn-secondary {
		background: transparent;
		border: 1px solid var(--color-border);
		color: var(--color-text);
	}

	.btn-secondary:hover {
		border-color: var(--color-accent);
		color: var(--color-accent);
		background: rgba(45, 212, 191, 0.05);
	}

	/* CV Content */
	.cv-content {
		padding: var(--space-2xl) 0 var(--space-3xl);
	}

	.cv-grid {
		display: grid;
		grid-template-columns: 1fr 320px;
		gap: var(--space-2xl);
		align-items: start;
	}

	.cv-section {
		margin-bottom: var(--space-2xl);
	}

	.cv-section:last-child {
		margin-bottom: 0;
	}

	.cv-section h2 {
		font-size: 1.25rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--color-accent);
		margin: 0 0 var(--space-lg);
		padding-bottom: var(--space-sm);
		border-bottom: 2px solid var(--color-border);
	}

	/* Experience Cards */
	.experience-card {
		background: var(--color-bg-card);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: var(--radius-lg);
		padding: var(--space-xl);
		margin-bottom: var(--space-lg);
		transition: all var(--transition-base);
	}

	.experience-card:hover {
		border-color: rgba(45, 212, 191, 0.3);
	}

	.experience-card:last-child {
		margin-bottom: 0;
	}

	.exp-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: var(--space-md);
	}

	.exp-header h3 {
		font-size: 1.125rem;
		margin: 0 0 var(--space-xs);
		color: var(--color-text);
	}

	.exp-company {
		color: var(--color-text-muted);
		margin: 0;
		font-size: 0.95rem;
	}

	.exp-location {
		font-size: 0.75rem;
		color: var(--color-text-subtle);
		background: rgba(255, 255, 255, 0.05);
		padding: 0.15rem 0.5rem;
		border-radius: var(--radius-sm);
		margin-left: var(--space-sm);
	}

	.exp-period {
		font-size: 0.875rem;
		color: var(--color-text-subtle);
		white-space: nowrap;
	}

	.exp-description {
		font-size: 0.9rem;
		color: var(--color-text-subtle);
		font-style: italic;
		margin: var(--space-sm) 0 var(--space-md);
		line-height: 1.5;
	}

	.exp-highlights {
		margin: 0 0 var(--space-md);
		padding-left: var(--space-lg);
		color: var(--color-text-muted);
	}

	.exp-highlights li {
		margin-bottom: var(--space-xs);
		line-height: 1.6;
	}

	.exp-tech {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-xs);
	}

	.tech-tag {
		font-size: 0.75rem;
		padding: 0.25rem 0.5rem;
		background: rgba(45, 212, 191, 0.1);
		color: var(--color-accent);
		border-radius: var(--radius-sm);
	}

	/* Sidebar */
	.cv-sidebar {
		position: sticky;
		top: var(--space-lg);
	}

	.skills-group {
		margin-bottom: var(--space-lg);
	}

	.skills-group:last-child {
		margin-bottom: 0;
	}

	.skills-group h4 {
		font-size: 0.875rem;
		color: var(--color-text);
		margin: 0 0 var(--space-sm);
		font-weight: 500;
	}

	.skills-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-xs);
	}

	.skill-tag {
		font-size: 0.8rem;
		padding: 0.25rem 0.6rem;
		background: var(--color-bg-tertiary);
		color: var(--color-text-muted);
		border-radius: var(--radius-sm);
		border: 1px solid var(--color-border);
	}

	.languages-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.languages-list li {
		display: flex;
		justify-content: space-between;
		padding: var(--space-sm) 0;
		border-bottom: 1px solid var(--color-border);
	}

	.languages-list li:last-child {
		border-bottom: none;
	}

	.lang-name {
		color: var(--color-text);
	}

	.lang-level {
		color: var(--color-text-subtle);
		font-size: 0.875rem;
	}

	.education-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.education-list li {
		padding: var(--space-sm) 0;
		border-bottom: 1px solid var(--color-border);
		display: flex;
		flex-direction: column;
		gap: 2px;
	}

	.education-list li:last-child {
		border-bottom: none;
	}

	.edu-school {
		color: var(--color-text);
		font-weight: 500;
		font-size: 0.9rem;
	}

	.edu-degree {
		color: var(--color-text-muted);
		font-size: 0.8rem;
	}

	.edu-meta {
		color: var(--color-text-subtle);
		font-size: 0.75rem;
	}

	.contact-info p {
		display: flex;
		align-items: center;
		gap: var(--space-sm);
		color: var(--color-text-muted);
		margin: 0 0 var(--space-sm);
	}

	.contact-info svg {
		color: var(--color-accent);
	}

	/* Footer */
	.footer {
		padding: var(--space-xl) 0;
		text-align: center;
		border-top: 1px solid var(--color-border);
		background: var(--color-bg-secondary);
	}

	.footer p {
		margin: 0;
		color: var(--color-text-subtle);
		font-size: 0.875rem;
	}

	/* Print Styles - Keep dark theme */
	@media print {
		@page {
			margin: 0.3in;
			size: A4;
		}

		* {
			-webkit-print-color-adjust: exact !important;
			print-color-adjust: exact !important;
			color-adjust: exact !important;
		}

		body {
			background: #0a0a0a !important;
			color: #e5e5e5 !important;
			font-size: 10pt !important;
			line-height: 1.4 !important;
		}

		main {
			padding: 0 !important;
			margin: 0 !important;
			background: #0a0a0a !important;
		}

		.container {
			max-width: 100% !important;
			padding: 0 !important;
		}

		.back-link,
		.cv-actions,
		.footer {
			display: none !important;
		}

		.cv-hero {
			padding: 0 0 12pt !important;

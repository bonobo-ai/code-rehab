---
import Layout from '../layouts/Layout.astro';

const linkedInUrl = "https://www.linkedin.com/in/valentinogiudice/";

const experience = [
	{
		company: "Remote Contractor",
		location: "Europe (Remote)",
		role: "Senior Full Stack Developer",
		period: "Oct 2020 - Present",
		description: "Long-term remote contractor for companies across the USA, UAE, and EU including BookRetreats, DesertCart, TeamKeys, Secret Source, and Ciao.",
		tech: ["React", "React Native", "Next.js", "Node.js"],
		highlights: [
			"Focused on sustained product development covering frontend, backend, and mobile roles",
			"Technical leadership driving e-health, e-sports, e-commerce, and other digital projects",
			"Owned major parts of product lifecycles, ensuring continuity, scalability, and technical direction"
		]
	},
	{
		company: "Space Applications Services / ESA",
		location: "Brussels, Belgium (Hybrid)",

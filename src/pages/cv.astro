---
import Layout from '../layouts/Layout.astro';

const linkedInUrl = "https://www.linkedin.com/in/valentinogiudice/";

const experience = [
	{
		company: "Independent Contractor",
		location: "Europe (Remote)",
		role: "Senior React & React Native Developer",
		period: "Oct 2020 - Present (5+ years)",
		description: "Long-term remote contractor for companies across the USA, UAE, and EU, delivering production-grade React and React Native applications in e-health, e-sports, e-commerce, and SaaS.",
		tech: ["React", "React Native", "Next.js", "TypeScript", "Expo", "Node.js", "Express", "Redux", "Zustand", "React Query", "GraphQL", "PostgreSQL", "MongoDB", "Docker", "GitHub Actions"],
		highlights: [
			"Built and shipped scalable web applications with React, Next.js, TypeScript, and JavaScript, and cross-platform mobile apps (iOS & Android) with React Native and Expo",
			"Implemented responsive UIs from Figma designs, architected reusable component libraries, and managed state with Redux, Zustand, and React Query",
			"Contributed to backend systems with Node.js, Express, REST APIs, and GraphQL, working with PostgreSQL, MongoDB, and Docker",
			"Led full project lifecycles from requirements and architecture through development, testing, and deployment to the App Store and Google Play",
			"Handled CI/CD workflows with GitHub Actions and integrated AI-powered features using the OpenAI API",
			"Mentored junior and mid-level React and React Native developers through code reviews, pair programming, and architecture guidance",
			"Onboarded new team members, documented best practices, and ran knowledge-sharing sessions across distributed teams"
		]
	},
	{
		company: "Space Applications Services NV/SA",
		location: "Brussels, Belgium (Hybrid)",
		role: "Full Stack Developer | Space Systems & ESA Projects",
		period: "Dec 2019 - Jun 2020 (7 months)",
		description: "Supported European Space Agency (ESA) engineers in building a payload management system for the International Space Station (ISS). Developed full-stack solutions using React and Django, contributing to space operations software, mission-critical systems, and aerospace data management.",
		tech: ["React", "Redux", "JavaScript", "Python", "Django", "PostgreSQL"],
		highlights: []
	},
	{
		company: "Natural Cycles",
		location: "Stockholm, Sweden (On-site)",
		role: "Scrum Master | Women's Health & Digital Health",
		period: "Sep 2017 - Aug 2018 (1 year)",
		description: "Led Agile development for Natural Cycles (iOS/Android app built with Capacitor + Ionic, Web App, Website) in the women's health and e-healthcare space, coordinating a cross-functional team of ~15 (developers, designers, copywriters). Focused on delivering regulatory-aware, patient-centered digital health solutions and improving team performance.",
		tech: ["Scrum", "Backlog Management", "Sprint Planning", "Retrospectives", "Agile Coaching"],
		highlights: []
	},
	{
		company: "Tinitell",
		location: "Stockholm, Sweden (On-site)",
		role: "Product Owner | Wearable Electronics & IoT",
		period: "Oct 2015 - Aug 2017 (2 years)",
		description: "Led product strategy and software development for Tinitell wrist-phone (iOS, Android, Embedded), coordinating a cross-functional team of ~10 (developers, designers). Oversaw UX/UI and industrial design across hardware-software integrated wearable electronics, driving consumer-focused IoT solutions and connected device innovation.",
		tech: ["Product Management", "Agile", "UX/UI Coordination"],
		highlights: []
	},
	{
		company: "InnoEnergy",
		location: "Stockholm, Sweden (On-site)",
		role: "Product Marketer | Renewable Energy & Cleantech",
		period: "Sep 2013 - Sep 2015 (2 years)",
		description: "Supported portfolio startups within InnoEnergy, a €560M+ EU-backed cleantech accelerator and KIC under the EIT, managing 200+ companies with billions in raised investment and projected €110B revenue by 2030. Drove brand strategy, corporate positioning, and PR with tier-one media (e.g., Wired), and coordinated participation in major industry events such as European Utility Week, enabling startups to scale across the European renewable energy and sustainable tech ecosystem.",
		tech: ["Marketing Strategy", "Brand Strategy", "Public Relations"],
		highlights: []
	}
];

const skills = {
	frontend: ["React", "Next.js", "React Native", "Expo", "TypeScript", "JavaScript", "Redux", "Zustand", "React Query", "HTML/CSS", "Tailwind CSS"],
	backend: ["Node.js", "Express", "Django", "Python", "REST APIs", "GraphQL"],
	database: ["PostgreSQL", "MongoDB", "Supabase", "Firebase"],
	tools: ["Git", "Docker", "GitHub Actions", "CI/CD", "Netlify", "Vercel", "Jest", "Cypress"]
};

const languages = [
	{ name: "Italian", level: "Native" },
	{ name: "English", level: "Full Professional" },
	{ name: "Swedish", level: "Conversational" },
	{ name: "Spanish", level: "Conversational" }
];

const education = [
	{ school: "Aarhus School of Business", degree: "MSc, Economics & Business Administration", period: "2010 - 2012", country: "Denmark" },
	{ school: "Stockholm University", degree: "Exchange Studies, Economics", period: "2011 - 2012", country: "Sweden" },
	{ school: "University of Málaga", degree: "Exchange Studies, Economics", period: "2008 - 2009", country: "Spain" },
	{ school: "University of Palermo", degree: "BSc, Economics & Business Administration", period: "2006 - 2010", country: "Italy" },
	{ school: "Hainan University", degree: "Chinese Language", period: "2018 - 2019", country: "China" }
];
---

<Layout title="CV | Valentino Giudice" description="Senior React & React Native Developer with 6+ years of experience building web and mobile applications with React, Next.js, TypeScript, and Node.js, plus 3+ years in technical leadership and IT project management.">
	<main>
		<section class="cv-hero">
			<div class="container">
				<a href="/" class="back-link">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M19 12H5M12 19l-7-7 7-7"/>
					</svg>
					Back to Home
				</a>
				<div class="cv-header">
					<div class="cv-photo">
						<img src="/valentino.jpg" alt="Valentino Giudice" width="150" height="150" />
					<img src="/valentino-small.jpg" alt="Valentino Giudice" class="cv-photo-print" width="150" height="150" />
					</div>
					<div class="cv-intro">
						<h1>Valentino Giudice</h1>
						<p class="cv-title">Senior React & React Native Developer</p>
						<p class="cv-summary">
							Senior React & React Native Developer and frontend-leaning fullstack developer with 6+ years of experience building scalable
							web applications and mobile apps. Specialized in React, React Native, Next.js, TypeScript, and Node.js.
							3+ years in technical leadership and IT project management. Long-term remote contractor for international teams
							across Europe, the US, and the Middle East.
						</p>
						<div class="cv-actions">
							<button id="downloadBtn" class="btn btn-primary">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
									<polyline points="7 10 12 15 17 10"/>
									<line x1="12" y1="15" x2="12" y2="3"/>
								</svg>
								Download PDF
							</button>
							<a href={linkedInUrl} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
								<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
									<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
								</svg>
								LinkedIn Profile
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="cv-content" id="cv-content">
			<div class="container">
				<div class="cv-grid">
					<div class="cv-main">
						<div class="cv-section">
							<h2>Experience</h2>
							{experience.map((exp) => (
								<div class="experience-card">
									<div class="exp-header">
										<div>
											<h3>{exp.role}</h3>
											<p class="exp-company">{exp.company} <span class="exp-location">{exp.location}</span></p>
										</div>
										<span class="exp-period">{exp.period}</span>
									</div>
									{exp.description && <p class="exp-description">{exp.description}</p>}
									{exp.highlights.length > 0 && (
										<ul class="exp-highlights">
											{exp.highlights.map((highlight) => (
												<li>{highlight}</li>
											))}
										</ul>
									)}
									<div class="exp-tech">
										{exp.tech.map((t) => (
											<span class="tech-tag">{t}</span>
										))}
									</div>
								</div>
							))}
						</div>
					</div>

					<aside class="cv-sidebar">
						<div class="cv-section">
							<h2>Skills</h2>
							<div class="skills-group">
								<h4>Frontend</h4>
								<div class="skills-tags">
									{skills.frontend.map((skill) => (
										<span class="skill-tag">{skill}</span>
									))}
								</div>
							</div>
							<div class="skills-group">
								<h4>Backend</h4>
								<div class="skills-tags">
									{skills.backend.map((skill) => (
										<span class="skill-tag">{skill}</span>
									))}
								</div>
							</div>
							<div class="skills-group">
								<h4>Database</h4>
								<div class="skills-tags">
									{skills.database.map((skill) => (
										<span class="skill-tag">{skill}</span>
									))}
								</div>
							</div>
							<div class="skills-group">
								<h4>Tools</h4>
								<div class="skills-tags">
									{skills.tools.map((skill) => (
										<span class="skill-tag">{skill}</span>
									))}
								</div>
							</div>
						</div>

						<div class="cv-section">
							<h2>Languages</h2>
							<ul class="languages-list">
								{languages.map((lang) => (
									<li>
										<span class="lang-name">{lang.name}</span>
										<span class="lang-level">{lang.level}</span>
									</li>
								))}
							</ul>
						</div>

						<div class="cv-section">
							<h2>Education</h2>
							<ul class="education-list">
								{education.map((edu) => (
									<li>
										<span class="edu-school">{edu.school}</span>
										<span class="edu-degree">{edu.degree}</span>
										<span class="edu-meta">{edu.period} · {edu.country}</span>
									</li>
								))}
							</ul>
						</div>

						<div class="cv-section">
							<h2>Contact</h2>
							<div class="contact-info">
								<p>
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
										<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
										<polyline points="22,6 12,13 2,6"/>
									</svg>
									giudicevalentino@gmail.com
								</p>
							</div>
						</div>
					</aside>
				</div>
			</div>
		</section>

		<footer class="footer">
			<div class="container">
				<p>&copy; 2026 Valentino Giudice. All rights reserved.</p>
			</div>
		</footer>
	</main>

</Layout>

<script>
	document.getElementById('downloadBtn')?.addEventListener('click', () => {
		const originalTitle = document.title;
		document.title = 'CV_Valentino Giudice';
		window.print();
		document.title = originalTitle;
	});
</script>

<style>
	.container {
		max-width: 1140px;
		margin: 0 auto;
		padding: 0 var(--space-lg);
	}

	/* Hero */
	.cv-hero {
		padding: var(--space-3xl) 0 var(--space-xl);
		position: relative;
	}

	.cv-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: var(--gradient-glow);
		pointer-events: none;
	}

	.cv-hero .container {
		position: relative;
		z-index: 1;
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: var(--space-sm);
		color: var(--color-text-muted);
		font-size: 0.9rem;
		margin-bottom: var(--space-xl);
		transition: color var(--transition-base);
	}

	.back-link:hover {
		color: var(--color-accent);
	}

	.cv-header {
		display: flex;
		gap: var(--space-2xl);
		align-items: flex-start;
	}

	.cv-photo {
		flex-shrink: 0;
		position: relative;
		padding: 4px;
		background: var(--gradient-teal);
		border-radius: var(--radius-lg);
	}

	.cv-photo img {
		width: 150px;
		height: 150px;
		border-radius: calc(var(--radius-lg) - 4px);
		object-fit: cover;
		display: block;
	}

	.cv-photo-print {
		display: none !important;
	}

	.cv-intro h1 {
		font-size: 2.5rem;
		margin: 0 0 var(--space-xs);
		letter-spacing: -0.02em;
	}

	.cv-title {
		font-size: 1.25rem;
		color: var(--color-accent);
		margin: 0 0 var(--space-md);
		font-weight: 500;
	}

	.cv-summary {
		color: var(--color-text-muted);
		line-height: 1.7;
		max-width: 500px;
		margin: 0 0 var(--space-xl);
	}

	.cv-actions {
		display: flex;
		gap: var(--space-md);
		flex-wrap: wrap;
	}

	/* Buttons */
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: var(--space-sm);
		padding: var(--space-md) var(--space-xl);
		border-radius: var(--radius-lg);
		font-weight: 600;
		font-size: 1rem;
		transition: all var(--transition-base);
		cursor: pointer;
		border: none;
		text-decoration: none;
	}

	.btn-primary {
		background: var(--gradient-teal);
		color: var(--color-teal-950);
		box-shadow: var(--shadow-md), 0 0 20px rgba(45, 212, 191, 0.2);
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg), 0 0 30px rgba(45, 212, 191, 0.3);
		color: var(--color-teal-950);
	}

	.btn-secondary {
		background: transparent;
		border: 1px solid var(--color-border);
		color: var(--color-text);
	}

	.btn-secondary:hover {
		border-color: var(--color-accent);
		color: var(--color-accent);
		background: rgba(45, 212, 191, 0.05);
	}

	/* CV Content */
	.cv-content {
		padding: var(--space-2xl) 0 var(--space-3xl);
	}

	.cv-grid {
		display: grid;
		grid-template-columns: 1fr 320px;
		gap: var(--space-2xl);
		align-items: start;
	}

	.cv-section {
		margin-bottom: var(--space-2xl);
	}

	.cv-section:last-child {
		margin-bottom: 0;
	}

	.cv-section h2 {
		font-size: 1.25rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--color-accent);
		margin: 0 0 var(--space-lg);
		padding-bottom: var(--space-sm);
		border-bottom: 2px solid var(--color-border);
	}

	/* Experience Cards */
	.experience-card {
		background: var(--color-bg-card);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: var(--radius-lg);
		padding: var(--space-xl);
		margin-bottom: var(--space-lg);
		transition: all var(--transition-base);
	}

	.experience-card:hover {
		border-color: rgba(45, 212, 191, 0.3);
	}

	.experience-card:last-child {
		margin-bottom: 0;
	}

	.exp-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: var(--space-md);
	}

	.exp-header h3 {
		font-size: 1.125rem;
		margin: 0 0 var(--space-xs);
		color: var(--color-text);
	}

	.exp-company {
		color: var(--color-text-muted);
		margin: 0;
		font-size: 0.95rem;
	}

	.exp-location {
		font-size: 0.75rem;
		color: var(--color-text-subtle);
		background: rgba(255, 255, 255, 0.05);
		padding: 0.15rem 0.5rem;
		border-radius: var(--radius-sm);
		margin-left: var(--space-sm);
	}

	.exp-period {
		font-size: 0.875rem;
		color: var(--color-text-subtle);
		white-space: nowrap;
	}

	.exp-description {
		font-size: 0.9rem;
		color: var(--color-text-subtle);
		font-style: italic;
		margin: var(--space-sm) 0 var(--space-md);
		line-height: 1.5;
	}

	.exp-highlights {
		margin: 0 0 var(--space-md);
		padding-left: var(--space-lg);
		color: var(--color-text-muted);
	}

	.exp-highlights li {
		margin-bottom: var(--space-xs);
		line-height: 1.6;
	}

	.exp-tech {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-xs);
	}

	.tech-tag {
		font-size: 0.75rem;
		padding: 0.25rem 0.5rem;
		background: rgba(45, 212, 191, 0.1);
		color: var(--color-accent);
		border-radius: var(--radius-sm);
	}

	/* Sidebar */
	.cv-sidebar {
		position: sticky;
		top: var(--space-lg);
	}

	.skills-group {
		margin-bottom: var(--space-lg);
	}

	.skills-group:last-child {
		margin-bottom: 0;
	}

	.skills-group h4 {
		font-size: 0.875rem;
		color: var(--color-text);
		margin: 0 0 var(--space-sm);
		font-weight: 500;
	}

	.skills-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-xs);
	}

	.skill-tag {
		font-size: 0.8rem;
		padding: 0.25rem 0.6rem;
		background: var(--color-bg-tertiary);
		color: var(--color-text-muted);
		border-radius: var(--radius-sm);
		border: 1px solid var(--color-border);
	}

	.languages-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.languages-list li {
		display: flex;
		justify-content: space-between;
		padding: var(--space-sm) 0;
		border-bottom: 1px solid var(--color-border);
	}

	.languages-list li:last-child {
		border-bottom: none;
	}

	.lang-name {
		color: var(--color-text);
	}

	.lang-level {
		color: var(--color-text-subtle);
		font-size: 0.875rem;
	}

	.education-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.education-list li {
		padding: var(--space-sm) 0;
		border-bottom: 1px solid var(--color-border);
		display: flex;
		flex-direction: column;
		gap: 2px;
	}

	.education-list li:last-child {
		border-bottom: none;
	}

	.edu-school {
		color: var(--color-text);
		font-weight: 500;
		font-size: 0.9rem;
	}

	.edu-degree {
		color: var(--color-text-muted);
		font-size: 0.8rem;
	}

	.edu-meta {
		color: var(--color-text-subtle);
		font-size: 0.75rem;
	}

	.contact-info p {
		display: flex;
		align-items: center;
		gap: var(--space-sm);
		color: var(--color-text-muted);
		margin: 0 0 var(--space-sm);
	}

	.contact-info svg {
		color: var(--color-accent);
	}

	/* Footer */
	.footer {
		padding: var(--space-xl) 0;
		text-align: center;
		border-top: 1px solid var(--color-border);
		background: var(--color-bg-secondary);
	}

	.footer p {
		margin: 0;
		color: var(--color-text-subtle);
		font-size: 0.875rem;
	}

	/* Print Styles - Clean light minimalist A4 */
	@media print {
		@page {
			margin: 0 !important;
			padding: 0 !important;
			size: A4;
		}

		* {
			-webkit-print-color-adjust: exact !important;
			print-color-adjust: exact !important;
			color-adjust: exact !important;
		}

		html, body {
			margin: 0 !important;
			padding: 0 !important;
			background: #ffffff !important;
			color: #1a1a1a !important;
			font-size: 8pt !important;
			line-height: 1.4 !important;
			height: 100% !important;
			font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif !important;
		}

		main {
			padding: 0 !important;
			margin: 0 !important;
			background: #ffffff !important;
			min-height: 100% !important;
			box-sizing: border-box !important;
		}

		.container {
			max-width: 100% !important;
			padding: 0 !important;
		}

		.back-link,
		.cv-actions,
		.footer {
			display: none !important;
		}

		/* ── Header banner ── */
		.cv-hero {
			padding: 20pt 28pt 16pt !important;
			margin: 0 !important;
			border-bottom: none !important;
			background: #f8fffe !important;
			border-bottom: 3px solid #0d9488 !important;
		}

		.cv-hero::before {
			display: none !important;
		}

		.cv-header {
			display: flex !important;
			flex-direction: row !important;
			gap: 16pt !important;
			align-items: center !important;
			width: 100% !important;
		}

		.cv-photo {
			flex-shrink: 0 !important;
			padding: 0 !important;
			background: none !important;
			border-radius: 50% !important;
			display: block !important;
